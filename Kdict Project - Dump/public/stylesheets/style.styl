body
    background: #fff
    padding: 0
    margin: 0
    font-family sans-serif

p
    font-size: 0.9em


#center
    margin 0 auto
    padding 0
    width: 890px

.light
    color #999

h1.title
    margin 15px 0 0 20px
    padding 0

h1.title a
    text-decoration none
    color #E55900
    

a
    color #E55900
  //color: #00B7FF

h1 a, h2 a, h3 a, h4 a
    text-decoration none

input:hover,
input:focus
    color: #333 !important
    outline: none
    background-color: #fff !important

#searchbox
    width: 840px
    margin: 0 auto

input.search
    margin: 0
    padding: 3px

    border-right: none
    border-left: 1px solid #ddd
    border-top: 1px solid #ddd
    border-bottom: 1px solid #ddd
    border-color: #888
    background: #f5f5f5
    color: #999
    font-size: 3em
    width: 740px
    -webkit-border-top-left-radius: 6px
    -webkit-border-bottom-left-radius: 6px
    -moz-border-radius-topleft: 6px
    -moz-border-radius-bottomleft: 6px
    border-top-left-radius: 6px
    border-bottom-left-radius: 6px
  
input.search-button
    margin: 0
    padding: 3px

    background: #fff
    color: #999
    font-size: 3em
    border: 1px solid #ddd
    border-left: 1px dotted #ddd
    border-color: #888
    -webkit-border-top-right-radius: 6px
    -webkit-border-bottom-right-radius: 6px
    -moz-border-radius-topright: 6px
    -moz-border-radius-bottomright: 6px
    border-top-right-radius: 6px
    border-bottom-right-radius: 6px


p.suggest
    color #999
    font-size 0.7em
    margin 0
    padding 0

ul.info li
    color: #33cc66

ul.error li
    color: #dd4444

ul.pagination
    list-style: none

    li
        display: inline
        font-size: 0.8em
        color: #999

        a
            border: 1px solid #eee
            margin: 3px
            padding: 2px 4px
            text-decoration: none

        a:hover
            border: 1px solid #bbb





li.fontface
    font-family ChunkFiveRegular

h1.fontface
    /*font-family ChunkFiveRegular*/
    font 60px/68px ChunkFiveRegular, Arial, sans-serif
    letter-spacing 0

h2.fontface
    /*font-family ChunkFiveRegular*/
    font 36px/40px ChunkFiveRegular, Arial, sans-serif
    margin: 0
    padding: 0
    letter-spacing 0


#menu
    width: 100%
    margin: 0 0 20px 0
    padding: 0
    border-top: 1px solid #aaa
    border-bottom: 1px solid #aaa

    ul
        margin 0
        padding 10px

    ul li
        list-style: none
        display: inline
        margin: 0
        padding: 0

        font-size: 1.2em
        font-weight bold
        /*font-family ChunkFiveRegular*/

        a
            margin: 0 10px 0 0 
            padding: 10px 10px
            text-decoration: none

    ul.right
        float: right

table
    border-collapse: collapse
    thead
        tr
            td
                font-weight: bold
                font-size: 1.1em
                border: 1px solid #555
    tr
        td
            border: 1px solid #aaa
            padding: 2px 4px

.result
    border-top: 1px solid #ddd
    margin: 5px
    padding: 20px 10px

    .korean
        width: 200px

    .definitions
        ul
            margin: 3px 5px 10px 5px
            padding: 0
        li
            margin: 0
            padding: 5px 10px
            list-style: none
.result .left
    float: left
    width: 180px

.result .right
    float: right
    width: 650px
    border-left: 1px solid #ddd

.result .edit
    float: right

.result .edit p
    color: #999
    padding: 0
    margin: 0
    font-size: 0.7em
    
.result-break
    clear: both

.result h3
    margin 0
    padding 0


input
    border: 1px solid #bbb


        
#footer
    border-top: 1px solid #aaa;

#footer ul li
    display: inline;
    color: #aaa;

